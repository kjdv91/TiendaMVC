@model Tienda.Models.Categoria

@{
    ViewData["Title"] = "Edit";
}
<form method="post" asp-action="Edit">
    <input  asp-action="IdCategoria" hidden/>
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <h2 class="text-info pl-3 ">Edit Categoria</h2>
        </div>

     

        <div class="container">

             <div class="row">
                <div class="col-md-6">
                    <label asp-for="NombreCategoria" class="form-label">Nombre Categoria</label>
                    <input asp-for="NombreCategoria" class="form-control"/>
                    <span asp-validation-for="NombreCategoria" class="text-danger"></span>
                </div>
            </div>



            <div class="row">
                <div class="col-md-6">
                    <label asp-for="NumeroOrden" class="form-label">Orden </label>
                    <input asp-for="NumeroOrden" class="form-control"/>
                    <span asp-validation-for="NumeroOrden" class="text-danger"></span>
                </div>
            </div>

            <br/>

            <div class="d-grip gap-2 d-md-block">
                <button type="submit" class="btn btn-primary">Actualizar 
               
                </button>
                 <a asp-controller="Categorias" asp-action="Index" class="btn btn-success">Regresar</a>
            </div>
        </div>

    </div>


</form>
