@model IEnumerable<Tienda.Models.TipoAplication>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista Tipo de Aplicacion</h2>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="TipoAplication" asp-action="Create" class="btn btn-primary">Nuevo Tipo Aplicacion</a>

        </div>
    </div>
    <br/>

    @if (Model.Count()>0)
    {
        <table class="table table-bordered table-stripe" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre Aplicacion</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th width="50%">@item.NombreAplicacion</th>
                          <th class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="TipoAplication" asp-action="Edit" asp-route-Id="@item.IdTipoAplicacion" class="btn btn-primary mx-1">
                                <i class="fas fa-edit"> Editar</i>
                            </a> @*Edita el id *@
                            <a asp-controller="TipoAplication" asp-action="Delete"  asp-route-Id="@item.IdTipoAplicacion" class="btn btn-danger mx-1">
                                <i class="fas fa-trash"> Delete</i>
                            </a>

                        </div>
                    </th>
                    </tr>
                    
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No hay registros de Tipo Aplicacion</p>
    }
</div>

