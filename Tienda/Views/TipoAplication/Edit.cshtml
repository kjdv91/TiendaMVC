
@model Tienda.Models.TipoAplication
@{
    ViewData["Title"] = "Create Tipo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
}

<h1>Create</h1>
<form method="post" asp-action="Edit">
     <input  asp-action="IdTipoAplicacion" hidden/> @* id del modelo*@
    <div class="border p-3">
        @*Validacion*@
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
    <div class="form-group row">
        <h2 class="text-info pl-3">Editar Tipo aplicacion</h2>
    </div>
    <div class="container">
        <div class="row">
           
            <div class="col-md-6">
                <label asp-for="NombreAplicacion" class="form-label">Nombre Aplicacion</label>
                <input asp-for="NombreAplicacion" class="form-control"/>
                <span asp-validation-for="NombreAplicacion" class="text-danger"></span>
            </div>

        </div>
        <br/>
    </div>
    <div class="d-grip gap-2 d-md-block">
        <button type="submit" class="btn btn-primary">Editar aplicacion </button>
        <a asp-controller="TipoAplication" asp-action="Index" class="btn btn-success">Regresar</a>
    </div>

    

</div>

</form>


@*//No viaja hasta el servidor*@
@section Scripts{
    @{<partial name="_ValidationScriptsPartial"/>}
}





